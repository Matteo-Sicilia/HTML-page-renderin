<div class="row m-4">
    <% if (!!session) {%>
        <h3>Username: <%= session?.username %></h3>
    <% } %>
    <div class="col-4">
        <a href="/create" class="btn btn-success m1">Crea</a>
        <ul class="list-group">
            <% for(let todo of todos){ %>
            <li class="list-group-item">
                <span class="<%= todo.done ? 'completed' : '' %>">
                    <%= todo.label %>
                </span>
                <span>
                    <a href="/?done=<%= todo.id %>" class="btn btn-primary">
                        <i class="fa fa-check"></i>
                    </a>
                    <a href="/edit?id=<%= todo.id %>" class="btn btn-success">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="/?delete=<%= todo.id %>" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </span>
            </li>
            <% } %>
        </ul>
    </div>
</div>
